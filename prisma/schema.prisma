generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  email             String   @unique
  name              String?
  image             String?
  password          String
  streak            Int      @default(0)
  lastActiveDate    DateTime?
  coins             Int      @default(0)
  completedDates    DateTime[]
  completedProblems String[]
}
